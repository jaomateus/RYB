<div class="container scroll-content dark-background" data-controller="modal">

  <div class=" simple_form search d-flex p-2 grid-search-bar sticky-top justify-content-center">
    <%= form_with url: "#", method: :get, class: "search-form-control-phaf form-group" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a plant for your garden"
      %>
      <%= submit_tag "Search", class: "btn btn-flat" %>
    <% end %>
  </div>

<%# this grid shows all the plants from our database PLANTS %>
  <div class=" container grid-search-cards">
    <% @plants.each do |plant| %>
      <div>
        <%= plant.latin_name %>
      </div>
      <div>
        <%= plant.common_name %>
      </div>
      <div>
        <%= image_tag("#{plant.image_url}", :alt => "rss feed") %>
      </div>
    <% end %>
  </div>
</div>
