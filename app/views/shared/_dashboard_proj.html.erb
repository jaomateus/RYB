<div class="scroll-content light-background">
  <div class="scroll">
    <div class="d-flex">
      <%# PROJECT INFO %>
      <div>
        <h1 class="name-site" >My Site</h1>
        <%= site.project_name %>
        <%= link_to "go back", sites_path %>
      </div>


      <%# WEATHER FORECAST %>
      <%= render "shared/weather_forecast"%>
    </div>
    <br>
    <br>
  <div>

   <div class="">
    <%= link_to "New log", new_site_log_path(site), class: "btn btn-ghost light"%>
  </div>

  <%# LOGS %>
  <% site.logs.each do |log| %>
    <div class="log-card" >
      <div>
              <%= log.created_at %>


              <%= log.title %>


              <%= log.description %>

      </div>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="..." alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="..." alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="..." alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
      <div>
      </div>
      <% if log.photos.attached? %>
        <% log.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
      <% end %>
    </div>
  <% end %>
