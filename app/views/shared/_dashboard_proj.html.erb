<div class="scroll-content light-background">
  <div class="scroll">
    <div class="d-flex">
      <%# PROJECT INFO %>
      <div>
        <h1 class="name-site" >My Site</h1>
        <%= site.project_name %>
        <%= link_to "go back", sites_path %>
      </div>


      <%# WEATHER FORECAST %>
      <%= render "shared/weather_forecast"%>
    </div>
    <br>
    <br>
  <div>

   <div class="">
    <%= link_to "New log", new_site_log_path(site), class: "btn btn-ghost light"%>
  </div>

  <%# LOGS %>
  <% site.logs.each do |log| %>
    <div class="log-card" >
      <div>
        <%= log.created_at %>
        <%= log.title %>
        <%= log.description %>
      </div>

      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">

          <% if log.photos.attached? %>
            <% log.photos.each do |photo| %>
              <%# <div class="carousel-item"> %>
                <%#= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, alt: "First slide", class: "d-block w-100" %>
              <%# </div> %>

              <div class="carousel-item">
                <img class="d-block w-100" src="..." alt="Third slide">
              </div>
              <%#= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
            <% end %>
          <% end %>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>



    </div>
  <% end %>
