            <div class="card-body">
              <h1>Weather in <span data-weather-target="city"> <%= @site.address %> </span></h1>
              <h3 class="text-secondary" data-weather-target="date"><%= Date.today %></h3>
              <div>
                <p data-weather-target="description"><!-- TODO: DESCRIPTION --></p>
                <div class="d-flex">
                  <img src="" alt="Weather Icon" data-weather-target="icon">
                  <h2 data-weather-target="temperature"><!-- TODO: TEMPERATURE --></h2>
                </div>
              </div>
            </div>
          </div>
        </div>
   </div>
</div>
